##########################################################################################
##### SimCore/RISC-V since 2018-07-05                ArchLab. TokyoTech              #####
##########################################################################################

CXX       = gcc
CXXFLAGS  = -O2 -Wall
TARGET    = initmem_gen
OBJS      = main.o
HEAD      = 

.SUFFIXES:
.SUFFIXES: .o .c
.PHONY: all clean run

##########################################################################################
all: $(TARGET)
	$(MAKE) $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

$(OBJS): Makefile $(HEAD)

.c.o:
	$(CXX) $(CXXFLAGS) -o $@ -c $<
##########################################################################################
run:
	./initmem_gen bbl.bin root.bin devicetree.dtb

##########################################################################################
wc:
	wc -l *.c
clean:
	rm -f *.o
binclean:
	rm -f *.bin *.dtb

##########################################################################################
